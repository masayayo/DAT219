@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Bytt passord";
}

@* Rediger brukerskjema *@
<div class="container well well-lg">
        <h2 class="col-sm-offset-4 col-sm-10">@ViewData["Title"]</h2>
        <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
            <div asp-validation-summary="All" class="col-sm-offset-4 col-sm-10 text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-10">
                    <button type="submit" class="btn btn-success">Bytt passord</button>
                    <a asp-controller="UserProfile" asp-action="ShowUserProfile" class="btn btn-default">Avbryt</a>
                </div>
            </div>
        </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
