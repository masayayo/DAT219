            </div>
        </div>

        @* Submit knapp *@
        <div class="form-group">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <input asp-for="User" type="hidden">
                <button class="btn btn-success" type="submit">Redigering fullf√∏rt</button>
                <a asp-controller="Team" asp-action="SeeTeamPlayers" asp-route-id="@Model.TeamId" class="btn btn-default">Avbryt</a>
            </div>
        </div>
       
    </form>
</div>