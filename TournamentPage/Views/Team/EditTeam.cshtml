@model Team

@{
    ViewBag.Title = "Edit Team";
}

<div class="container well well-lg">
    <div class="col-sm-4"></div>
    <div class="col-sm-8">
        @* Overskrift *@
        <h2>Rediger lagnavnet ditt</h2> 
    </div>
    <div class="col-sm-4"></div>
    <div asp-validation-summary="All" class="text-danger col-sm-8"></div>
    <form method="post" asp-controller="Team" asp-action="EditTeam" class="form-horizontal">
       <input type="hidden" asp-for="TeamId" />
        @* Teamnavn *@
        <div class="form-group">
            <label asp-for="TeamName" class="col-sm-4 control-label">Lagnavn: </label>
            <div class="col-sm-8">
                <input asp-for="TeamName" class="form-control" type="text" placeholder=""/>
