@model IEnumerable<TeamUser>

@* For every entry in the database we add a row with the following data to the table *@
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <p>Lagets spillere:</p>
        <table class="table">
            <thead>
                <tr class="info"><td>Spillernavn</td> <td>Epost</td> <td>Tlf</td><td></td></tr>
            </thead>
            <tbody>
                @foreach(var t in @Model)
                {
                    if(t != null && t.User != ViewBag.User)
                    {
                        <tr><td><a asp-controller="" asp-action="" asp-route-id=""> @t.User.FirstName @t.User.LastName</a></td> <td> @t.User.Email</td>  <td>@t.User.PhoneNumber</td><td>@Html.ActionLink("Fjern", "RemoveTeamPlayer", "Team",new{@t.TeamUserId},null)</td></tr>
                    }else{
                        <tr><td><a asp-controller="" asp-action="" asp-route-id=""> @t.User.FirstName @t.User.LastName</a></td> <td> @t.User.Email</td>  <td>@t.User.PhoneNumber</td><td></td></tr>
                    }
                }
            </tbody>
        </table>
    </div>