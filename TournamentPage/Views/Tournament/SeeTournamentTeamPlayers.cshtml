@model IList<TeamUser>

@{
    ViewBag.Title = "Turneringslagets spillere";
    Layout = "_Layout";
}

<div class="container" style="margin-top: 10px;">
    <div class=row>
        <h3>@ViewBag.TeamName</h3>
        <p>Nednfor vises en oversikt over alle spillerne som deltok p√• dette turneringslaget. </p>
        <div class="col-sm-6">
            <table class="table">
                <thead>
                    <tr class="info"><td>Spillernavn</td> <td>Epost</td> <td>Tlf</td></tr>
                </thead>
                <tbody>
                    @if(Model.Count != 0)
                    {
                        @foreach(var t in @Model)
                        {
                            if(t != null)
                            {
                                <tr><td><a asp-controller="" asp-action="" asp-route-id=""> @t.User.FirstName @t.User.LastName</a></td> <td> @t.User.Email</td>  <td>@t.User.PhoneNumber</td> </tr>
                            }
                        }
                    }
                    else
                    {
                        <tr><td>Turneringen har ingen spillere enda.</td></tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Tournament" asp-action="ShowTournamentTeam" asp-route-id="@ViewBag.TournamentId" class="btn btn-info col-sm-6" style="margin-bottom: 10px">Tilbake til turneringslagene</a> 
        </div>
  </div>
</div>