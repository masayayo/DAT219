@model IList<TournamentUser>

@{
    ViewBag.Title = "Turneringens spillere";
    Layout = "_Layout";
}

<div class="container" style="margin-top: 10px;">
    <div class=row>
        <h3>@ViewBag.TournamentName</h3>
        <p>Under vises alle turneringens spillere.</p>
        <div class="col-sm-6">
            <table class="table">
                <thead>
                    <tr class="info"><td>Spillernavn</td><td>Email</td><td>Tlf</td></tr>
                </thead>
                <tbody>
                    @if(Model.Count != 0)
                    {
                        @foreach(var t in @Model)
                        {
                            if(t != null)
                            {
                                <tr><td> @t.User.FirstName @t.User.LastName </td> <td>@t.User.Email</td> <td>@t.User.PhoneNumber</td> </tr>
                            }
                        }
                    }
                    else
                    {
                        <tr><td>Turneringen har ingen lag enda.</td></tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Tournament" asp-action="SeeTournamentDetails" asp-route-id="@ViewBag.TournamentId" asp-route-returnurl="/UserProfile/ShowUserProfile" class="btn btn-info col-sm-6" style="margin-bottom: 10px">Tilbake til turneringen</a> 
        </div>
  </div>
</div>