@model IList<TournamentTeam>

@{
    ViewBag.Title = "Turneringens lag";
    Layout = "_Layout";
}

<div class="container" style="margin-top: 10px;">
    <div class=row>
        <h3>@ViewBag.TournamentName</h3>
        <p>Under vises alle lagene som deltar på turneringen. </p>
        <div class="col-sm-6">
            <table class="table">
                <thead>
                    <tr class="info"><td>Lagnavn</td></tr>
                </thead>
                <tbody>
                    @if(Model.Count != 0)
                    {
                        @foreach(var t in @Model)
                        {
                            if(t != null)
                            {
                                <tr><td><a asp-controller="Tournament" asp-action="SeeTournamentTeamPlayers" asp-route-id="@t.TournamentTeamId"> @t.Team.TeamName</a></td></tr>
                            }
                        }
                    }
                    else
                    {
                        <tr><td>Turneringen har ikke fått noen påmeldte lag enda. Ditt lag kan bli det første.</td></tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Tournament" asp-action="SeeTournamentDetails" asp-route-id="@ViewBag.TournamentId" asp-route-returnurl="/UserProfile/ShowUserProfile" class="btn btn-info col-sm-6" style="margin-bottom: 10px">Tilbake til turneringen</a> 
        </div>
  </div>
</div>
